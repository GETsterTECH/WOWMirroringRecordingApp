<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trasparant"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="@dimen/_60dp"
        android:layout_height="@dimen/_70dp"
        android:layout_marginStart="@dimen/_45dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:translationZ="@dimen/_60dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60dp"
            android:layout_marginLeft="@dimen/_2dp"
            android:src="@drawable/school_logo" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/_5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/gps_tracker_back"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/_8dp"
            android:src="@drawable/ic_left_arrow" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_70dp"
            android:layout_marginLeft="@dimen/_90dp"
            android:layout_toEndOf="@+id/gps_tracker_back"
            android:layout_toRightOf="@+id/gps_tracker_back"
            android:includeFontPadding="false"
            android:text="WOW Mirroring Recording App"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold" />

        <!--   <androidx.appcompat.widget.AppCompatImageView
               android:layout_width="51dp"
               android:layout_height="match_parent"
               android:layout_marginStart="@dimen/_5dp"
               android:layout_marginLeft="@dimen/_2dp"
               android:layout_toRightOf="@+id/gps_tracker_back"
               android:background="@color/red" />-->

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_header1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_below="@+id/rl_header"
        android:background="@color/colorGray"
        android:elevation="@dimen/_5dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title_name8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/Login"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_header1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp">

                <LinearLayout
                    android:id="@+id/ll_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15dp"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_100dp"
                        android:layout_marginLeft="@dimen/_2dp"
                        android:src="@drawable/school_logo" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rl_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_logo"
                    android:layout_marginTop="@dimen/_20dp"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Please select from the following users registered with the mobile number: +91 9834578418"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mo_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_logo"
                    android:layout_marginTop="@dimen/_20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/radio_group"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <RadioButton
                                android:id="@+id/radio_button1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10dp"
                                android:buttonTint="@drawable/radiobutton"
                                android:checked="false"
                                android:scaleX="1.5"
                                android:scaleY="1.5" />

                            <RadioButton
                                android:id="@+id/radio_button2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10dp"
                                android:layout_marginTop="@dimen/_25dp"
                                android:buttonTint="@drawable/radiobutton"
                                android:checked="false"
                                android:scaleX="1.5"
                                android:scaleY="1.5" />

                        </RadioGroup>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_sim_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ll_mobil_no"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:id="@+id/ll_contry_code2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ll_contry_code"
                                android:layout_margin="@dimen/_10dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_60dp"
                                    android:layout_height="@dimen/_60dp"
                                    android:layout_marginEnd="@dimen/_15dp"
                                    android:background="@drawable/user_profile"
                                    android:gravity="center"
                                    android:text="SIM 1"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_sim_network_one"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Kirshna Kumar"
                                    android:textColor="#3366ff"
                                    android:textStyle="bold" />
                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_sim_ne"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Teaching Faculty / Mathematics"
                                    android:textStyle="bold" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_sim_two"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_contry_code"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ll_contry_code"
                                android:layout_margin="@dimen/_10dp"
                                android:layout_marginTop="@dimen/_10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_60dp"
                                    android:layout_height="@dimen/_60dp"
                                    android:layout_marginEnd="@dimen/_15dp"
                                    android:background="@drawable/user_profile"
                                    android:gravity="center"
                                    android:text="SIM 1"
                                    android:textColor="@color/colorGray"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tv_sim_network_"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Kirshna Kumar"
                                        android:textColor="#3366ff"
                                        android:textStyle="bold" />
                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tv_sim_net"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Teaching Faculty / Mathematics"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40dp"
                    android:layout_below="@+id/ll_mo_no"
                    android:layout_marginTop="@dimen/_20dp"
                    android:gravity="center">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/login_btn_two"
                        android:layout_width="@dimen/_150dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_rectangle_blue_filled"
                        android:text="@string/Login"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sp" />
                </LinearLayout>

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>








